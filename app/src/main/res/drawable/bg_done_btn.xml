<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape>
            <padding
                android:right="2dp"
                android:left="2dp"
                android:top="2dp"
                android:bottom="2dp"/>
            <gradient
                android:startColor="#e91e63"
                android:endColor="#e91e63"
                android:angle="270"
                android:gradientRadius="100dp"/>
            <corners
                android:radius="5dp" />
        </shape>
    </item>
    <item >
        <shape>
            <solid android:color="#e91e63" />
        </shape>
    </item>
</layer-list>